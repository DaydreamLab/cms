<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="../../autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="featured">
        </testsuite>
        <testsuite name="unit">
            <directory suffix=".php">./tests/Unit/Services/Item/Cases/Admin/*</directory>
        </testsuite>
    </testsuites>

    <php>
        <env name="SEEDING" value="1"/>
        <env name="DB_PORT" value="33060"/>
    </php>
</phpunit>
